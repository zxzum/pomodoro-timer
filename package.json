{
  "name": "pomodoro-timer",
  "displayName": "Pomodoro Timer",
  "description": "Professional Pomodoro Timer with beautiful UI and customization",
  "version": "1.0.0",
  "publisher": "zxzum",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodoroTimer.showPanel",
        "title": "Pomodoro: Show Control Panel"
      },
      {
        "command": "pomodoroTimer.toggleTimer",
        "title": "Pomodoro: Toggle Timer"
      }
    ],
    "configuration": {
      "title": "Pomodoro Timer",
      "properties": {
        "pomodoroTimer.workDuration": {
          "type": "number",
          "default": 25,
          "description": "Work duration in minutes",
          "minimum": 1,
          "maximum": 60
        },
        "pomodoroTimer.breakDuration": {
          "type": "number",
          "default": 5,
          "description": "Break duration in minutes",
          "minimum": 1,
          "maximum": 30
        },
        "pomodoroTimer.longBreakDuration": {
          "type": "number",
          "default": 15,
          "description": "Long break duration in minutes",
          "minimum": 1,
          "maximum": 60
        },
        "pomodoroTimer.sessionsBeforeLongBreak": {
          "type": "number",
          "default": 4,
          "description": "Number of sessions before long break",
          "minimum": 1,
          "maximum": 10
        },
        "pomodoroTimer.soundEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when timer ends"
        },
        "pomodoroTimer.notificationEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Show desktop notification when timer ends"
        }
      }
    }
  }
}